rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions for Role-Based Access ---
    function isSignedIn() {
      return request.auth != null;
    }

    // Custom Claims တွင် 'role' မပါဝင်ပါက null ဖြစ်မည်။
    function getRole() {
      return request.auth.token.role;
    }

    // Role Hierachy: Owner > Admin > Manager > Employee
    function isOwner() {
      return isSignedIn() && getRole() == 'Owner';
    }

    function isAdmin() {
      return isSignedIn() && (getRole() == 'Admin' || isOwner());
    }

    function isManager() {
      return isSignedIn() && (getRole() == 'Manager' || isAdmin());
    }

    function isEmployee() {
      return isSignedIn() && (getRole() == 'Employee' || isManager());
    }

    // --- User Profiles & Authentication ---
    // Each user can read/write their own profile data in /users/{userId}
    // Assumes user's UID is used as document ID for their profile.
    match /users/{userId} {
      allow read, update, delete: if isSignedIn() && request.auth.uid == userId;
      allow create: if isSignedIn() && request.auth.uid == request.auth.uid; // Any signed-in user can create their own profile
      // Admin/Owner can manage any user profile
      allow read, update, delete: if isAdmin();
    }

    // --- Factory Profile (Global Settings) ---
    // Only Owners/Admins can manage factory settings (e.g., Logo, Currency, Payroll Cycle)
    // Assumes a single document for factory profile, e.g., /factoryProfile/settings
    match /factoryProfile/{docId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isOwner() || isAdmin();
      // Optional: Add data validation for `update`/`create` operations if needed
      // allow update: if (isOwner() || isAdmin()) && request.resource.data.keys().hasAll(['logo', 'currency', 'payrollCycle']);
    }

    // --- Inventory Management ---
    // Employees can read, Managers/Admins can create/update/delete inventory items.
    match /inventory/{itemId} {
      allow read: if isEmployee(); // All employees can see inventory
      allow create, update, delete: if isManager(); // Managers and above can manage inventory
      // Optional: data validation for inventory item structure
      // allow create: if isManager() && request.resource.data.name is string && request.resource.data.quantity is int;
    }

    // --- Production Logging ---
    // Employees can create their own logs, Managers/Admins can read/update/delete any log.
    // Assumes production log document contains `employeeId` field matching `request.auth.uid`.
    match /productionLogs/{logId} {
      allow create: if isEmployee() && request.resource.data.employeeId == request.auth.uid;
      allow read: if isManager(); // Managers and above can view all production logs
      allow update, delete: if isAdmin(); // Only Admin/Owner can modify/delete logs
      // Ensure 'employeeId' is present and matches the authenticated user's ID
      allow create: if isEmployee()
                       && request.resource.data.employeeId == request.auth.uid
                       && request.resource.data.productionAmount is number // Data validation example
                       && request.resource.data.productionAmount > 0;
    }

    // --- Payroll System ---
    // Only Managers/Admins can access payroll data.
    match /payroll/{payrollId} {
      allow read, create, update, delete: if isManager();
    }

    // --- Sales & CRM ---
    // Employees (Sales Reps) can create sales orders/customers, Managers/Admins can read/update/delete all.
    match /salesOrders/{orderId} {
      allow create: if isEmployee(); // Sales reps can create orders
      allow read: if isManager(); // Managers and above can view all orders
      allow update, delete: if isAdmin(); // Only Admins can modify/delete orders
    }

    match /customers/{customerId} {
      allow create: if isEmployee(); // Sales reps can add customers
      allow read: if isEmployee(); // All employees can see customer list
      allow update, delete: if isManager(); // Managers and above can manage customers
    }

    // --- Subscriptions ---
    // Users can read their own subscription status, only Admins/Owners can modify.
    match /subscriptions/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow create, update, delete: if isOwner() || isAdmin();
    }

    // --- Default Deny for other collections ---
    // Any collections not explicitly matched above will be denied.
    match /{document=**} {
      allow read, write: if false; // Deny by default for any unmatched documents
    }
  }
}
